{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": false
  },
  "include": ["src", "vite.config.js"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.js",
    "**/*.test.jsx",
    "src/components/PomodoroPanel_backup.jsx",
    "src/components/PomodoroPanel_UX.jsx"
  ]
}
