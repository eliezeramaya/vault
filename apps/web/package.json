{
  "name": "idea-sphere-app",
  "homepage": "https://eliezeramaya.github.io/vault/",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host --strictPort --port 3000 --base /",
    "build": "vite build",
    "analyze": "vite build --mode analyze",
    "analyze:bundle": "vite build --mode analyze",
    "postbuild": "node -e \"const fs=require('fs');fs.copyFileSync('dist/index.html','dist/404.html');console.log('SPA fallback 404.html created');\"",
    "preview": "vite preview",
    "preview:host": "vite preview --host --port 4173",
    "open:chrome": "node -e \"const cp=require('child_process'); const candidates=['C:/Program Files/Google/Chrome/Application/chrome.exe','chrome']; const url=process.env.URL||'http://localhost:3000/vault/'; for (const c of candidates){ try{ cp.spawn(c,[url],{stdio:'ignore',detached:true}); process.exit(0);}catch(e){} } console.log('Chrome not found. Open manually:', url);\"",
    "test:metrics": "node ./scripts/run-metrics-tests.mjs",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:e2e": "playwright test tests/pwa.spec.ts",
    "test:all": "playwright test",
    "lint": "eslint src --ext .js,.jsx",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "d3-hierarchy": "^3.1.2",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0",
    "troika-three-text": "^0.47.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix --quiet"
    ],
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
