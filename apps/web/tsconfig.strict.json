{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "checkJs": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/strict.tsbuildinfo"
  },
  "include": [
    // Fase 1: solo librerías utilitarias (añadir más directorios gradualmente)
    "src/lib",
    // Permitir tipar tests de librería en el futuro
    "src/types.d.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
